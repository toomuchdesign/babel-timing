{
  "name": "babel-timing",
  "version": "0.1.0",
  "description": "Measure Babel compilation time",
  "main": "src/index.js",
  "files": [
    "src",
    "cli.js",
    "!__tests__"
  ],
  "cli": "./cli.js",
  "scripts": {
    "test": "jest",
    "preversion": "npm run prepublish",
    "version": "git add package.json",
    "postversion": "git push && git push --tags",
    "prepublish": "npm t",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "babel",
    "performance",
    "compilation",
    "performance",
    "measurement",
    "time"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toomuchdesign/babel-timing.git"
  },
  "author": "Andrea Carraro <me@andreacarraro.it>",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.4.3",
    "cli-table": "^0.3.1",
    "colors": "^1.3.3",
    "commander": "^2.20.0",
    "glob": "^7.1.3",
    "lodash.mergewith": "^4.6.1",
    "multimatch": "^4.0.0",
    "reduce-flatten": "^2.0.0",
    "rollup": "^1.10.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.3",
    "husky": "^1.0.0",
    "jest": "^24.7.1",
    "lint-staged": "^7.0.0",
    "prettier": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --write",
      "npm t -- .",
      "git add"
    ],
    "**/*.{md}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines" : { "node" : ">=7.6" }
}
