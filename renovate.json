{
  "extends": ["config:base"],
  "schedule": "every weekend",
  "rangeStrategy": "bump",
  "automerge": true,
  "automergeType": "branch",
  "stabilityDays": 3,
  "major": {
    "automerge": false
  },
  "postUpdateOptions": ["npmDedupe"],
  "packageRules": [
    {
      "packagePatterns": ["^@babel/"],
      "groupName": "Update babel monorepo packages"
    },
    {
      "packageNames": ["jest", "babel-jest"],
      "groupName": "Update jest packages"
    },
    {
      "packagePatterns": ["^lodash"],
      "groupName": "Update lodash packages"
    },
    {
      "packagePatterns": ["^webpack"],
      "groupName": "Update webpack packages"
    }
  ]
}
